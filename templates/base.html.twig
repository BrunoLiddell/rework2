<!DOCTYPE html>
<html lang="fr" dir="ltr">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="author" content="Bruno ALVES, Leïla CACHOT, Julie FRANÇOIS et Ravella MAKER">
        <title>
            {% if block('title') is defined %}
                {{ block('title') }} – Re:Work
            {% else %}
                Re:Work
            {% endif %}
        </title>

        {% block fonts %}
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Krona+One&family=Raleway:ital,wght@0,300;0,500;0,700;1,300;1,500;1,700&display=swap" rel="stylesheet">
        {% endblock %}

        {% block styles %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block preload_js %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    {{ source('@public_path/assets/Icons.svg') }}

    <div id="global_container">
        {% block header %}{% endblock %}

        {% block main %}{% endblock %}

        {% block footer %}{% endblock %}
    </div>

    <script>{{ include('@assets_path/scripts/svg.js') }}</script>
    {% block postload_js %}{% endblock %}
    </body>
</html>